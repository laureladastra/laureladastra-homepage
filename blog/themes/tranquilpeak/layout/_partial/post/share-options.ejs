<div
  id="share-options-bar"
  class="share-options-bar"
  data-behavior="<%= sidebarBehavior %>"
>
  <ul class="share-options">
    <li class="share-option">
      <a
        class="share-option-btn"
        target="new"
        href="<%= 'https://www.linkedin.com/sharing/share-offsite/?url=' + post.permalink %>"
      >
        <i class="fa-brands fa-linkedin-in"></i>
        <span><%= __('global.share_on_linkedin') %></span>
      </a>
    </li>
    <li class="share-option">
      <a
        class="share-option-btn"
        target="new"
        href="<%= 'https://twitter.com/intent/tweet?text=' + post.permalink %>"
      >
        <i class="fa-brands fa-x-twitter"></i>
        <span><%= __('global.share_on_twitter') %></span>
      </a>
    </li>
  </ul>
</div>
<div id="share-options-mask" class="share-options-mask"></div>
